{
  "manifest_version": 3,
  "name": "esa notifier",
  "version": "0.0.5",
  "permissions": ["notifications", "storage", "alarms"],
  "host_permissions": ["https://crx.esa.io/api/notifications.json"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_icon": "img/icon_close_128.png",
    "default_title": "esa notifier",
    "default_popup": "view/popup.html"
  },
  "icons": {
    "48": "img/icon_open_48.png",
    "128": "img/icon_open_128.png"
  }
}
